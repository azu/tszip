{
  "include": ["src/**/*"],
  "exclude": ["src/template/**/*", "test/**"],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "incremental": false,
    "declaration": true,
    "sourceMap": true,
    "checkJs": true
  }
}