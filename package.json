{
  "name": "tsdx",
  "version": "0.14.1",
  "author": "Jared Palmer <jared@palmer.net>",
  "description": "Zero-config TypeScript package development",
  "license": "MIT",
  "homepage": "https://github.com/formium/tsdx",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/formium/tsdx.git"
  },
  "keywords": [
    "react",
    "typescript",
    "bundle",
    "rollup"
  ],
  "bugs": {
    "url": "https://github.com/formium/tsdx/issues"
  },
  "bin": {
    "tsdx": "./dist/index.cjs"
  },
  "scripts": {
    "bootstrap": "tsc -p tsconfig.bootstrap.json && node dist/index.js build",
    "prepare": "yarn bootstrap",
    "dev": "yarn bootstrap && node dist/index.cjs watch",
    "build": "yarn bootstrap && node dist/index.cjs build",
    "postbuild": "chmod +x dist/index.*js",
    "lint": "yarn build && yarn lint:post-build",
    "lint:post-build": "node dist/index.cjs lint ./ --ignore-pattern 'test/e2e/fixtures/lint'",
    "test": "yarn build && node dist/index.cjs test",
    "release": "np",
    "deduplicate": "yarn-deduplicate -s fewer yarn.lock",
    "deduplicate:check": "yarn-deduplicate -s fewer yarn.lock --list --fail"
  },
  "files": [
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@babel/core": "^7.15.0",
    "@babel/helper-module-imports": "^7.0.0",
    "@babel/parser": "^7.15.3",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.15.0",
    "@babel/traverse": "^7.15.0",
    "@optimize-lodash/rollup-plugin": "^1.0.0",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "ctjlewis/replace",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "ansi-escapes": "^5.0.0",
    "asyncro": "^3.0.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-polyfill-regenerator": "^0.2.2",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "camelcase": "^6.0.0",
    "chalk": "^4.1.2",
    "enquirer": "^2.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.9.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "estree-walker": "^3.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "glob-promise": "^4.2.0",
    "jest": "^27.1.0",
    "jest-watch-typeahead": "^0.6.4",
    "jpjs": "^1.2.1",
    "lodash.merge": "^4.6.2",
    "ora": "^6.0.0",
    "pascal-case": "^3.1.1",
    "prettier": "^2.3.2",
    "progress-estimator": "^0.3.0",
    "regenerator-runtime": "^0.13.9",
    "resolve": "^1.20.0",
    "resolve.exports": "^1.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sade": "^1.4.2",
    "semver": "^7.1.1",
    "shelljs": "^0.8.3",
    "tiny-glob": "^0.2.6",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2"
  },
  "devDependencies": {
    "@types/eslint": "^7.28.0",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.7.10",
    "@types/react": "^17.0.19",
    "@types/rollup-plugin-json": "^3.0.2",
    "@types/sade": "^1.6.0",
    "@types/semver": "^7.3.8",
    "@types/shelljs": "^0.8.5",
    "@types/styled-components": "^5.1.13",
    "autoprefixer": "^10.3.3",
    "babel-plugin-replace-identifiers": "^0.1.1",
    "cssnano": "^5.0.8",
    "doctoc": "^2.0.1",
    "husky": "^7.0.2",
    "np": "^7.5.0",
    "pretty-quick": "^3.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.1",
    "styled-components": "^5.3.1",
    "tiny-invariant": "^1.1.0",
    "tiny-warning": "^1.0.3",
    "yarn-deduplicate": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern '!test/tests/lint/**' && yarn lint && yarn deduplicate:check && doctoc README.md"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
